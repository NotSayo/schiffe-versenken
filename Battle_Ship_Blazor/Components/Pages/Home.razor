    }

    public Point GetPointFromField(int field)
    {
        return new Point(field % 10, (int)Math.Floor((double)field / 10));
    }

    public List<Point> CalculateBetweenPoints(Point p1, Point p2)
    {
        List<Point> points = new List<Point>();
        if (p1.X != p2.X)
        {
            for (int i = p1.X; i <= p2.X; i++)
            {
                points.Add(new Point(i, p1.Y));
            }
        }
        if (p1.Y != p2.Y)
        {
            for (int i = p1.Y; i <= p2.Y; i++)
            {
                points.Add(new Point(p1.X, i));
            }
        }
        return points;
    }

    public int GetIndexFromSequence(EShip type, int field)
    {
        int index = 0;
        for (; field > 0; field--)
        {
            if (ShipFields[field] == null)
                return index;
            if (ShipFields[field].Type == type)
                index++;
            else
                return index;
        }

        return default;
    }
